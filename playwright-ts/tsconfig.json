{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@fixtures/*": ["./fixtures/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "helpers/**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}